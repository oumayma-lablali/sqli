{% extends 'home.html.twig' %}

{% block title %}Enseignant {% endblock %}

{% block body %}
    <h1>Enseignant </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Cin</th>
                {% if is_granted("ROLE_ADMIN") %}
                <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for enseignant in enseignants %}
            <tr>
                <td>{{ enseignant.id }}</td>
                <td>{{ enseignant.nom }}</td>
                <td>{{ enseignant.prenom }}</td>
                <td>{{ enseignant.cin }}</td>
                {% if is_granted("ROLE_ADMIN") %}
                <td>
                    <a href="{{ path('app_enseignant_show', {'id': enseignant.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('app_enseignant_edit', {'id': enseignant.id}) }}" class="btn btn-warning">edit</a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('app_enseignant_new') }}" class="btn btn-success">Create new</a>
    {% endif %}
{% endblock %}
