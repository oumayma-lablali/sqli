{% extends 'home.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ etudiant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ etudiant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ etudiant.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ etudiant.adresse }}</td>
            </tr>
            <tr>
                <th>Cne</th>
                <td>{{ etudiant.cne }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_etudiant_index') }}" class="btn btn-secondary">back to list</a>
    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}" class="btn btn-warning">edit</a>

    {{ include('etudiant/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
