{% extends 'home.html.twig' %}

{% block title %}Note{% endblock %}

{% block body %}
    <h1>Note</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ note.note }}</td>
            </tr>
            <tr>
                <th>Observation</th>
                <td>{{ note.observation }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('app_note_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('app_note_edit', {'id': note.id}) }}" class="btn btn-warning">edit</a>

    {{ include('note/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
