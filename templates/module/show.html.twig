{% extends 'home.html.twig' %}

{% block title %}Module{% endblock %}

{% block body %}
    <h1>Module</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ module.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ module.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_module_index') }}" class="btn btn-secondary">back to list</a>

    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('app_module_edit', {'id': module.id}) }}" class="btn btn-warning">edit</a>
    {% endif %}

    {{ include('module/_delete_form.html.twig') }}
{% endblock %}
